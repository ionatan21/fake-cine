import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en" class="dark bg-black overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo-fake-icon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Fake cinemas</title>
    <script is:inline>
      if ("scrollRestoration" in history) {
        history.scrollRestoration = "manual";
      }
    </script>
    <script is:inline type="module" src="/src/hooks/scrollRestore.ts" />

	<ClientRouter />
  </head>
  <style>
    html {
      scroll-behavior: smooth;
    }
  </style>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }
</style>
